# Funções de operação
def soma(a, b):
    return a + b

def subtracao(a, b):
    return a - b

def multiplicacao(a, b):
    return a * b

def divisao(a, b):
    return a / b

def tabuada():
    valor1 = int(input("Digite o valor para ver sua tabuada: "))
    for contador in range(0, 11):
        print(f"{valor1} X {contador} = {valor1 * contador}")

def valores():
    valor1 = int(input("Digite o primeiro valor: "))
    valor2 = int(input("Digite o segundo valor: "))
    return valor1, valor2

# Função de apresentação do portfólio
def apresentar_portfolio():
    print("****************************")
