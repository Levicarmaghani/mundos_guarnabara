    print("\n****************************")

# Função principal
def executar_calculadora():
    while True:
        print("-=" * 30)
        usuario = int(input("""
Você deseja:
[1] SOMAR
[2] SUBTRAIR
[3] MULTIPLICAR
[4] DIVIDIR
[5] VER TABUADA
Escolha uma opção: 
"""))

        while usuario not in [1, 2, 3, 4, 5]:
            print("-=" * 30)
            print("OPÇÃO INVÁLIDA, TENTE NOVAMENTE")
            usuario = int(input("Escolha uma opção válida [1] - [5]: "))

        if usuario == 1:
            valor1, valor2 = valores()
            resultado = soma(valor1, valor2)
            print(f"Resultado de {valor1} + {valor2} = {resultado}")
        elif usuario == 2:
            valor1, valor2 = valores()
            resultado = subtracao(valor1, valor2)
            print(f"Resultado de {valor1} - {valor2} = {resultado}")
        elif usuario == 3:
            valor1, valor2 = valores()
            resultado = multiplicacao(valor1, valor2)
            print(f"Resultado de {valor1} * {valor2} = {resultado}")
        elif usuario == 4:
            valor1, valor2 = valores()
            resultado = divisao(valor1, valor2)
            print(f"Resultado de {valor1} / {valor2} = {resultado}")
        elif usuario == 5:
            tabuada()

        continuar = input("Deseja continuar? (S/N): ").strip().upper()
        while continuar not in ["S", "N"]:
            continuar = input("Digite 'S' para continuar ou 'N' para parar: ").strip().upper()
        
        if continuar == "N":
            print("-=" * 30)
            print("FIM DO PROGRAMA.")
            break

# Exibindo portfólio e interagindo com a calculadora
def main():
    apresentar_portfolio()  # Exibe as informações do portfólio
    executar_calculadora()   # Inicia a calculadora interativa

if __name__ == "__main__":
    main()